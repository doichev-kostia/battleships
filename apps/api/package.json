{
	"name": "@battleships/api",
	"private": true,
	"version": "0.0.1",
	"main": "build/server.js",
	"scripts": {
		"start": "cross-env NODE_PATH=./build node -r source-map-support/register build/server.js",
		"dev": "cross-env NODE_ENV=development NODE_PATH=./build nodemon -r source-map-support/register ./build/server.js",
		"build": "tsc",
		"build:clean": "yarn && yarn clean:build && yarn build",
		"clean:build": "yarn rimraf build",
		"clean:modules": "yarn rimraf node_modules",
		"watch": "tsc -w",
		"test": "cross-env NODE_ENV=test NODE_PATH=./build mocha -r source-map-support/register build/tests/**/*.test.js --exit",
		"migration:migrate": "yarn mikro-orm migration:create && yarn mikro-orm migration:up",
		"load-fixtures:test": "cross-env NODE_ENV=test NODE_PATH=./build node build/scripts/load-fixtures.js",
		"load-fixtures:app": "cross-env NODE_ENV=development NODE_PATH=./build node build/scripts/load-fixtures.js"
	},
	"dependencies": {
		"@battleships/contracts": "workspace:^",
		"@mikro-orm/cli": "^5.3.1",
		"@mikro-orm/core": "^5.3.1",
		"@mikro-orm/migrations": "^5.3.1",
		"@mikro-orm/postgresql": "^5.3.1",
		"@panenco/papi": "^1.0.4",
		"@types/uuid": "^8.3.4",
		"bcryptjs": "^2.4.3",
		"class-validator-jsonschema": "^3.1.1",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"crypto": "^1.0.1",
		"date-fns": "^2.29.1",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"express-async-errors": "^3.1.1",
		"fs-extra": "^10.1.0",
		"hash-files": "^1.1.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"routing-controllers": "^0.9.0",
		"routing-controllers-openapi": "^3.1.0",
		"socket.io": "^4.5.1",
		"source-map-support": "^0.5.21",
		"swagger-ui-express": "^4.5.0",
		"tiny-glob": "^0.2.9",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/chai": "^4.3.1",
		"@types/cors": "^2.8.12",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.13",
		"@types/faker": "^6.6.9",
		"@types/fs-extra": "^9.0.13",
		"@types/mocha": "^9.1.1",
		"@types/supertest": "^2.0.12",
		"@types/swagger-ui-express": "^4.1.3",
		"chai": "^4.3.6",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"faker": "5.5.3",
		"mocha": "^9.1.3",
		"mockdate": "^3.0.5",
		"nodemon": "^2.0.19",
		"supertest": "^6.2.4"
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/orm.config.ts"
		]
	},
	"packageManager": "yarn@3.2.1"
}
